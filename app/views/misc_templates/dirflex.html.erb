<h1>Director #<%= @id %> details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @target.name %></dd>
  <dt>Dob</dt>
  <dd><%= @target.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @target.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @target.image %>"></dd>
  <dt>Created at:</dt>
  <dd><%= @target.created_at %></dd>
  <dt>Updated at:</dt>
  <dd><%= @target.updated_at %></dd>
</dl>

<hr>

<table border="1">
  <tbody>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th></th>
    </tr>
    <% @filmography.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><img src="<%= movie.image%>"></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= Director.where({ :id => movie.director_id}).at(0).name %></td>
        <td><a href = "/movies/<%= movie.id %>" >Show details</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
