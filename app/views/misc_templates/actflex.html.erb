<h1>Actor #<%= @id %> details</h1>

<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @target.name %></dd>
  <dt>Dob</dt>
  <dd><%= @target.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @target.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @target.image %>"></dd>
  <dt>Created at:</dt>
  <dd><%= @target.created_at %></dd>
  <dt>Updated at:</dt>
  <dd><%= @target.updated_at %></dd>
</dl>

<hr>

<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character Name</th>
      <th></th>
    </tr>
    <% @filmography.each do |character| %>
      <tr>
        <td><%= Movie.all.where({ :id => character.movie_id}).at(0).title %></td>
        <td><%= Movie.all.where({ :id => character.movie_id}).at(0).year %></td>
        <td><%= Director.where({ :id => Movie.all.where({ :id => character.movie_id}).at(0).director_id}).at(0).name %></td>
        <td><%= character.name %></td>
        <td><a href = "/movies/<%= character.movie_id %>" >Show details</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
